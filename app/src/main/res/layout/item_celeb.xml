<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_search_celeb_profile"
        android:layout_width="100dp"
        android:layout_height="148dp"
        android:src="@drawable/celeb_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_celeb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/celeb_title"
        android:text="워렌 버핏의 돈 모으는 습관"
        android:textFontWeight="900"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_search_celeb_habit1"
        app:layout_constraintStart_toEndOf="@+id/iv_search_celeb_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_celeb_habit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="습관1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_search_celeb_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_search_celeb_title" />

    <TextView
        android:id="@+id/tv_search_celeb_habit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="습관2"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_search_celeb_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_search_celeb_habit1" />

    <TextView
        android:id="@+id/tv_search_celeb_habit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="습관3"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/iv_search_celeb_profile"
        app:layout_constraintTop_toBottomOf="@id/tv_search_celeb_habit2" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="9dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="50dp"
        android:backgroundTint="@color/green"
        android:minHeight="0dp"
        android:paddingHorizontal="13.5dp"
        android:paddingVertical="6dp"
        android:text="가져오기"
        android:textSize="12dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_celeb_habit3" />


</androidx.constraintlayout.widget.ConstraintLayout>

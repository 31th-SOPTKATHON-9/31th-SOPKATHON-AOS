<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.home.HomeActivity">

        <ImageView
            android:id="@+id/iv_home_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_home_search"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="55dp"
            android:src="@drawable/search"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_home_mypage"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/mypage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="습팡님의 1일전 도둑질"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_home_logo" />


        <TextView
            android:id="@+id/iv_home_stepone"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/step_radius"
            android:gravity="center"
            android:src="@drawable/date_img"
            android:text="1"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />

        <TextView
            android:id="@+id/iv_home_steptwo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/step_radius"
            android:gravity="center"
            android:src="@drawable/date_img"
            android:text="2"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_home_stepone"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />

        <TextView
            android:id="@+id/iv_home_stepthree"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/step_radius"
            android:gravity="center"
            android:src="@drawable/date_img"
            android:text="3"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_home_steptwo"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />

        <TextView
            android:id="@+id/iv_home_stepfour"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/step_radius"
            android:gravity="center"
            android:src="@drawable/date_img"
            android:text="4"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_home_stepthree"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />

        <TextView
            android:id="@+id/iv_home_stepfive"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/step_radius"
            android:gravity="center"
            android:src="@drawable/date_img"
            android:text="5"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_home_stepfour"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />

        <TextView
            android:id="@+id/iv_home_stepsix"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/step_radius"
            android:gravity="center"
            android:src="@drawable/date_img"
            android:text="6"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_home_stepfive"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />

        <TextView
            android:id="@+id/iv_home_stepseven"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/step_radius"
            android:gravity="center"
            android:src="@drawable/date_img"
            android:text="7"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/iv_home_stepsix"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_title" />


        <View
            android:id="@id/iv_home_divide"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="21dp"
            android:background="#F5F5F5"
            app:layout_constraintTop_toBottomOf="@+id/iv_home_stepone"

            />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/rv_home_habit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_home_divide" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
